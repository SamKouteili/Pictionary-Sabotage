<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PodiumActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="PICTIONARY SABOTAGE"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/winners"
        android:layout_width="301dp"
        android:layout_height="59dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="Winners!"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/loosers"
        android:layout_width="301dp"
        android:layout_height="59dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="Loosers"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winners" />

    <ImageView
        android:id="@+id/crown1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/crown2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winners"
        app:layout_constraintVertical_bias="0.078"
        app:srcCompat="@drawable/crown" />

    <ImageView
        android:id="@+id/crown2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/loosers"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/crown" />

    <TextView
        android:id="@+id/winner1"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="Name"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/crown1"
        app:layout_constraintStart_toEndOf="@+id/crown1"
        app:layout_constraintTop_toTopOf="@+id/crown1" />

    <TextView
        android:id="@+id/winner2"
        android:layout_width="152dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="Name"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/loosers"
        app:layout_constraintEnd_toEndOf="@+id/winner1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/winner1"
        app:layout_constraintTop_toBottomOf="@+id/winner1"
        app:layout_constraintVertical_bias="0.433" />

    <TextView
        android:id="@+id/looser1"
        android:layout_width="153dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="Name"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/skull1"
        app:layout_constraintBottom_toTopOf="@+id/looser2"
        app:layout_constraintEnd_toEndOf="@+id/winner2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/skull1"
        app:layout_constraintTop_toTopOf="@+id/skull1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/looser2"
        android:layout_width="151dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="Name"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/skull2"
        app:layout_constraintEnd_toEndOf="@+id/looser1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/looser1"
        app:layout_constraintTop_toTopOf="@+id/ptsl2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/skull1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loosers"
        app:srcCompat="@drawable/danger" />

    <ImageView
        android:id="@+id/skull2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skull1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/danger" />

    <TextView
        android:id="@+id/ptsw1"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="pts"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/winner1"
        app:layout_constraintTop_toBottomOf="@+id/winners" />

    <TextView
        android:id="@+id/ptsw2"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="pts"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/loosers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/winner2"
        app:layout_constraintTop_toBottomOf="@+id/ptsw1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ptsl1"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="pts"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/looser1"
        app:layout_constraintTop_toBottomOf="@+id/loosers" />

    <TextView
        android:id="@+id/ptsl2"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:fontFamily="casual"
        android:text="pts"
        android:textColor="#6a0dad"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/looser2"
        app:layout_constraintTop_toBottomOf="@+id/ptsl1" />

    <Button
        android:id="@+id/returnToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/return_to_menu"
        app:layout_constraintBottom_toTopOf="@+id/winners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>